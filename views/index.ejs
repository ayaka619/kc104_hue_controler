    <form id="data">
      <div>
          <input type="text" name="bridgeIp" id="bridgeIp" value="172.20.11.99" />
          <input type="text" name="username" id="username" value="d02sfHv8nPolNMQ9lrQjvY6FD4N8Ik9cygtg3gR4">
      </div>
